{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["./node_modules/@cloudflare/workers-types", "@types/jest"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./scripts/**/*.ts"],
  "exclude": ["node_modules/", "dist/"],
  "ts-node": {
    "compilerOptions": {
      "lib": ["esnext"],
      "types": ["@types/node"]
    }
  }
}
