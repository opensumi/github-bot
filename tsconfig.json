{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "allowJs": true,
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types", "@types/jest"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": [
    "./src/**/*.ts",
    "__tests__/**/*.ts",
    "./scripts/**/*.ts",
    "./typings/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
