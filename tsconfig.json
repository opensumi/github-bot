{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "allowJs": true,
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["./node_modules/@cloudflare/workers-types", "@types/jest"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "./typings.d.ts"
  ],
  "exclude": ["node_modules/", "dist/"],
  "ts-node": {
    "compilerOptions": {
      "lib": ["esnext"],
      "types": ["@types/node"]
    }
  }
}
