{
  "name": "github-bot",
  "version": "1.0.0",
  "private": "true",
  "main": "index.js",
  "repository": "https://github.com/opensumi/github-bot.git",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "build": "esno build.ts",
    "dev": "run-p dev:build dev:worker dev:proxy",
    "dev:build": "yarn build --watch",
    "dev:worker": "wrangler dev",
    "dev:proxy": "esno dev.ts",
    "publish:local": "yarn build && wrangler publish",
    "lint": "eslint . && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint:fix": "eslint . --fix",
    "test": "jest --config jestconfig.json --verbose",
    "sync-secrets": "esno scripts/sync-env-to-secrets.ts",
    "validate-remote": "esno scripts/validate-remote-secrets.ts",
    "generate-env": "esno ./scripts/generate-env-typing.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@cloudflare/wrangler": "^1.19.7",
    "@types/jest": "^27.4.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "dotenv": "^14.3.2",
    "edge-mock": "^0.0.15",
    "esbuild": "^0.14.14",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "esno": "^0.14.0",
    "jest": "^27.4.7",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "smee-client": "^1.2.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@octokit/auth-app": "^3.6.1",
    "@octokit/auth-unauthenticated": "^2.1.0",
    "@octokit/core": "^3.5.1",
    "@octokit/oauth-app": "^3.6.0",
    "@octokit/plugin-paginate-rest": "^2.17.0",
    "@octokit/webhooks": "^9.22.0",
    "itty-router": "^2.4.10",
    "mri": "^1.2.0"
  }
}
