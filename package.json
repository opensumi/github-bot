{
  "name": "github-bot",
  "packageManager": "yarn@3.4.1",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/opensumi/github-bot.git",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "libs/*"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "tsc:build": "wireit",
    "build": "wireit",
    "build:libs": "wireit",
    "build:cfworker": "wireit",
    "build:node": "wireit",
    "watch": "yarn build -- --watch",
    "watch:node": "yarn build:node -- --watch",
    "dev": "yarn gen && yarn dev:worker:preview",
    "dev:node": "nodemon ./dist/node",
    "dev:worker:preview": "run-p dev:worker dev:proxy",
    "dev:worker": "wrangler dev",
    "dev:proxy": "tsx dev.ts",
    "gen": "cfworker-builder gen-toml",
    "prepublish:local": "yarn build",
    "publish:local": "wrangler publish",
    "publish:libs": "lerna publish",
    "lint": "eslint . && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint:fix": "eslint . --fix && prettier . -w",
    "test": "jest --config jest.config.json --verbose",
    "test:cov": "yarn test --coverage",
    "extract-fixtures": "tsx scripts/extract-webhook-example.ts",
    "generate:json-schemas": "node scripts/generate-json-schemas-all.js",
    "postinstall": "yarn build:libs"
  },
  "wireit": {
    "build:libs": {
      "command": "lerna run build --stream"
    },
    "tsc:build": {
      "command": "tsc -p ./tsconfig.build.json --noEmit",
      "dependencies": [
        "build:libs"
      ]
    },
    "build": {
      "command": "run-p build:cfworker build:node",
      "dependencies": [
        "tsc:build",
        "gen"
      ]
    },
    "build:cfworker": {
      "command": "tsx build-cfworker.ts"
    },
    "build:node": {
      "command": "tsx build-node.ts"
    }
  },
  "dependencies": {
    "@hono/node-server": "^1.1.1",
    "@octokit/app": "^14.0.0",
    "@octokit/core": "^5.0.0",
    "@octokit/rest": "^20.0.1",
    "@octokit/webhooks": "^12.0.3",
    "@opensumi/cfworker-builder": "workspace:^",
    "@opensumi/ide-utils": "^2.23.1",
    "@opensumi/octo-service": "workspace:^",
    "chatgpt": "^5.0.9",
    "hono": "^3.6.0",
    "lodash": "^4.17.21",
    "mdast-util-from-markdown": "^1.3.0",
    "mdast-util-gfm": "^2.0.2",
    "mdast-util-gfm-autolink-literal": "^1.0.3",
    "mdast-util-to-markdown": "^1.5.0",
    "micromark-extension-gfm": "^2.0.1",
    "micromark-extension-gfm-autolink-literal": "^1.0.3",
    "mri": "^1.2.0",
    "openai-fetch": "^1.1.0",
    "tsx": "^3.12.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230228.0",
    "@octokit/types": "^11.1.0",
    "@octokit/webhooks-examples": "^7.3.0",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/tough-cookie": "^4.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "dotenv": "^16.3.1",
    "edge-mock": "^0.0.15",
    "esbuild": "^0.17.5",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "execa": "^7.2.0",
    "jest": "^29.4.1",
    "lefthook": "^1.3.8",
    "lerna": "^7.1.1",
    "magic-string": "^0.30.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "smee-client": "^1.2.3",
    "string.prototype.replaceall": "^1.0.7",
    "ts-jest": "^29.0.5",
    "ts-json-schema-generator": "^1.2.0",
    "typescript": "^4.9.4",
    "wireit": "^0.9.5",
    "wrangler": "^2.8.1"
  }
}
