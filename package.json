{
  "name": "github-bot",
  "version": "1.0.0",
  "private": "true",
  "main": "index.js",
  "repository": "https://github.com/opensumi/github-bot.git",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "ts:check": "tsc -p ./tsconfig.build.json --noEmit",
    "prebuild": "yarn ts:check && yarn gen",
    "build": "tsx build.ts",
    "watch": "yarn build --watch",
    "dev": "yarn gen && yarn dev:preview",
    "dev:preview": "run-p dev:worker dev:proxy",
    "dev:worker": "wrangler dev",
    "dev:proxy": "tsx dev.ts",
    "gen": "tsx ./scripts/generate-wrangler-toml.ts",
    "prepublish:local": "yarn build",
    "publish:local": "wrangler publish",
    "lint": "eslint . && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint:fix": "eslint . --fix",
    "test": "jest --config jest.config.json --verbose",
    "extract-fixtures": "tsx scripts/extract-webhook-example.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.17.0",
    "@octokit/types": "^8.0.0",
    "@octokit/webhooks-examples": "^6.5.0",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "dotenv": "^16.0.3",
    "edge-mock": "^0.0.15",
    "esbuild": "^0.15.11",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "smee-client": "^1.2.3",
    "string.prototype.replaceall": "^1.0.6",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@octokit/auth-app": "^4.0.7",
    "@octokit/auth-unauthenticated": "^3.0.3",
    "@octokit/core": "^4.1.0",
    "@octokit/oauth-app": "^4.1.0",
    "@octokit/plugin-paginate-rest": "^5.0.1",
    "@octokit/rest": "^19.0.5",
    "@octokit/webhooks": "^10.3.0",
    "hono": "^2.2.5",
    "lodash": "^4.17.21",
    "mri": "^1.2.0",
    "@bytemain/openai-fetch": "^1.0.4",
    "toucan-js": "^2.7.0",
    "tsx": "^3.10.1",
    "wrangler": "^2.1.11"
  }
}
