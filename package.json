    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@octokit/webhooks": "^9.22.0",
    "itty-router": "^2.4.10",
    "itty-router-extras": "^0.4.2"
  }
}
