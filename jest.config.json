{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest",
    "^.+\\.html$": "<rootDir>/test/transforms/html.js"
  },
  "testRegex": "/test/.*\\.test\\.ts$",
  "testPathIgnorePatterns": ["<rootDir>/build/","<rootDir>/src/lib/", "<rootDir>/node_modules/"],
  "collectCoverageFrom": ["src/**/*.{ts,js}"],
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jestSetup.js"]
}
